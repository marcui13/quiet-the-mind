              </div>
            </div>

            <!-- Quick Links -->
            <div class="space-y-4">
              <h3 class="font-heading font-semibold text-gray-800 text-lg">
                Navegaci√≥n
              </h3>
              <div class="grid grid-cols-2 gap-2">
                {navItems.map((item) => (
                  <a
                    href={item.href}
                    class="flex items-center space-x-2 text-sm text-gray-600 hover:text-serene-blue transition-colors duration-200 py-1"
                  >
                    <span class="text-xs opacity-70">{item.icon}</span>
                    <span>{item.label}</span>
                  </a>
                ))}
              </div>
            </div>

            <!-- Contact & Info -->
            <div class="space-y-4">
              <h3 class="font-heading font-semibold text-gray-800 text-lg">
                Informaci√≥n
              </h3>
              <div class="space-y-3 text-sm">
                <div class="flex items-start space-x-2">
                  <span class="text-serene-blue mt-0.5">üí°</span>
                  <span class="text-gray-600">Contenido informativo y educativo</span>
                </div>
                <div class="flex items-start space-x-2">
                  <span class="text-serene-blue mt-0.5">‚ö†Ô∏è</span>
