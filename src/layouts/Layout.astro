              {navItems.map((item) => (
                <a
                  href={item.href}
                  class={`
                    relative px-4 py-2.5 rounded-full font-medium text-sm transition-all duration-300
                    ${isActive(item.href)
                      ? 'bg-serene-blue text-white shadow-lg shadow-serene-blue/30 transform scale-105'
                      : 'text-gray-700 hover:text-serene-blue hover:bg-serene-blue/8 hover:scale-102'
                    }
                  `}
                >
                  <span class="flex items-center space-x-1">
                    <span class="text-xs opacity-70">{item.icon}</span>
