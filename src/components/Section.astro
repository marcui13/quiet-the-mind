---
export interface Props {
  title?: string;
  subtitle?: string;
  bgColor?: string;
  id?: string;
  centerContent?: boolean;
}

const {
  title,
  subtitle,
  bgColor = "bg-white dark:bg-gray-900",
  id,
  centerContent = false
} = Astro.props;
---

<section id={id} class={`py-16 ${bgColor}`}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    {title && (
      <div class={`mb-12 ${centerContent ? 'text-center' : ''}`}>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6 slide-up">
          {title}
        </h2>
        {subtitle && (
          <p class="text-gray-600 dark:text-gray-300 text-lg slide-up stagger-1">
            {subtitle}
          </p>
        )}
      </div>
    )}

    <div class="slide-up stagger-2">
      <slot />
    </div>
  </div>
</section>