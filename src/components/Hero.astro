---
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  bgGradient?: boolean;
}

const {
  title,
  subtitle,
  ctaText,
  ctaLink,
  bgGradient = true
} = Astro.props;
---

<section class={`py-24 md:py-32 lg:py-40 relative overflow-hidden ${bgGradient ? 'gradient-cream' : 'bg-cream'}`}>
  <!-- Enhanced background decorations -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-serene-blue/8 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-tr from-calm-green/6 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-72 h-72 bg-gradient-to-r from-soft-yellow/4 to-light-coral/4 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 max-w-7xl relative z-10">
    <div class="max-w-5xl mx-auto text-center">

      <!-- Main Title -->
      <div class="animate-on-scroll mb-8">
        <h1 class="font-heading font-bold text-4xl md:text-6xl lg:text-7xl text-gray-800 leading-tight">
          <span class="bg-gradient-to-r from-serene-blue to-calm-green bg-clip-text text-transparent">
            {title}
          </span>
        </h1>
      </div>

      <!-- Subtitle -->
      {subtitle && (
        <div class="animate-on-scroll mb-12">
          <p class="text-lg md:text-xl lg:text-2xl text-gray-700 leading-relaxed max-w-4xl mx-auto font-medium">
            {subtitle}
          </p>
        </div>
      )}

      <!-- Slot content -->
      <div class="animate-on-scroll mb-12">
        <slot />
      </div>

      <!-- CTA Button -->
      {ctaText && ctaLink && (
        <div class="animate-on-scroll">
          <a
            href={ctaLink}
            class="group inline-flex items-center px-10 py-5 bg-gradient-to-r from-serene-blue to-calm-green text-white font-heading font-bold text-lg rounded-full shadow-lg shadow-serene-blue/25 hover-lift transition-all duration-500 hover:shadow-xl hover:shadow-serene-blue/40 hover:scale-105"
          >
            <span class="relative z-10">{ctaText}</span>
            <svg class="ml-3 w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>

            <!-- Animated background -->
            <div class="absolute inset-0 bg-gradient-to-r from-serene-blue/80 to-calm-green/80 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
        </div>
      )}

      <!-- Decorative elements -->
      <div class="mt-16 flex justify-center space-x-4">
        <div class="w-3 h-3 bg-serene-blue rounded-full animate-pulse"></div>
        <div class="w-3 h-3 bg-calm-green rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
        <div class="w-3 h-3 bg-soft-yellow rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      </div>
    </div>
  </div>

  <!-- Floating elements for visual interest -->
  <div class="absolute top-20 left-10 w-4 h-4 bg-serene-blue/20 rounded-full float" style="animation-delay: 1s;"></div>
  <div class="absolute top-40 right-20 w-6 h-6 bg-calm-green/20 rounded-full float" style="animation-delay: 2s;"></div>
  <div class="absolute bottom-20 left-20 w-5 h-5 bg-soft-yellow/20 rounded-full float" style="animation-delay: 0.5s;"></div>
</section>