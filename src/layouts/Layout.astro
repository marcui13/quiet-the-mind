<style>
  @import "../styles/global.css";

  /* Enhanced animations for header */
  @keyframes animate-fade-in {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: animate-fade-in 0.6s ease-out forwards;
  }

  /* Smooth scale utility */
  .hover\:scale-102:hover {
    transform: scale(1.02);
  }

  /* Custom scrollbar for better visual harmony */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--color-cream);
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, var(--color-serene-blue), var(--color-calm-green));
    border-radius: 10px;
    border: 1px solid var(--color-cream);
  }

  ::-webkit-scrollbar-thumb:hover {
    box-shadow: 0 0 6px rgba(74, 144, 226, 0.3);
  }

  /* Enhanced focus styles for accessibility */
  :focus-visible {
    outline: 2px solid var(--color-serene-blue);
    outline-offset: 2px;
    border-radius: 8px;
  }

  /* Subtle page transition */
  body {
    animation: pageLoad 0.8s ease-out;
  }

  @keyframes pageLoad {
    from {
