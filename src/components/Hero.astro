---
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title,
  subtitle,
  ctaText,
  ctaLink
} = Astro.props;
---

<section class="bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-blue-900/20 py-20 lg:py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center fade-in">

      <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 slide-up stagger-1">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
          {title}
        </span>
      </h1>

      {subtitle && (
        <p class="text-xl lg:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto slide-up stagger-2">
          {subtitle}
        </p>
      )}

      <div class="slide-up stagger-3">
        <slot />
      </div>

      {ctaText && ctaLink && (
        <div class="mt-8 slide-up stagger-4">
          <a
            href={ctaLink}
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium text-lg rounded-lg shadow-lg shadow-blue-500/25 hover:shadow-xl hover:shadow-blue-500/40 hover:scale-105 transition-all duration-300"
          >
            {ctaText}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>
</section>