---
export interface Props {
  title: string;
  description?: string;
  icon?: string;
  variant?: 'default' | 'highlighted' | 'minimal';
  className?: string;
}

const {
  title,
  description,
  icon = "ðŸ’­",
  variant = 'default',
  className = ""
} = Astro.props;

const variantClasses = {
  default: "bg-white/90 backdrop-blur-sm border border-gray-200/60 hover:border-serene-blue/40 hover:shadow-lg hover:shadow-serene-blue/10",
  highlighted: "bg-gradient-to-br from-serene-blue/8 to-calm-green/6 border border-serene-blue/30 hover:border-serene-blue/50 hover:shadow-xl hover:shadow-serene-blue/15",
  minimal: "bg-white/60 backdrop-blur-sm border border-gray-100/80 hover:border-gray-300/60 hover:bg-white/80"
};
---

<div class={`
  ${variantClasses[variant]}
  rounded-2xl p-8
  hover-lift
  transition-all duration-500 ease-out
  animate-on-scroll
  group relative overflow-hidden
  ${className}
`}>
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-40">
    <div class="absolute top-2 right-2 w-20 h-20 bg-gradient-to-br from-serene-blue/10 to-transparent rounded-full blur-xl group-hover:scale-125 transition-transform duration-700"></div>
  </div>

  <div class="relative z-10">
    <div class="flex items-start space-x-5">
      <div class="text-4xl flex-shrink-0 transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-6">
        {icon}
      </div>
      <div class="flex-1 space-y-4">
        <h3 class="font-heading font-bold text-xl text-gray-800 mb-3 leading-tight group-hover:text-serene-blue transition-colors duration-300">
          {title}
        </h3>
        {description && (
          <p class="text-gray-700 leading-relaxed text-base font-medium">
            {description}
          </p>
        )}
        <div class="space-y-3">
          <slot />
        </div>
      </div>
    </div>
  </div>

  <!-- Hover effect indicator -->
  <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-serene-blue to-calm-green transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
</div>