          >
            <div class="grid grid-cols-2 gap-3 pt-6">
              {navItems.map((item) => (
                <a
                  href={item.href}
                  class={`
                    flex items-center space-x-2 px-4 py-3 rounded-xl font-medium text-sm transition-all duration-200
                    ${isActive(item.href)
                      ? 'bg-serene-blue text-white shadow-md'
                      : 'text-gray-700 hover:text-serene-blue hover:bg-serene-blue/5'
                    }
                  `}
                >
                  <span class="text-lg">{item.icon}</span>
